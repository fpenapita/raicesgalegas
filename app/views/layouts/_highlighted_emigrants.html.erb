<ul>
  <% for emigrant in @highlighted_emigrants -%>
    <li>
      <span class="marker">&nbsp;</span>
      <%= link_to h(emigrant.name), emigrant %><br/>
      <p><span class="fixed_text"><%=t 'home.sidebar.born_in' %></span>

      <% if emigrant.birth_place? -%>
        <span class="desc_text"><%= h emigrant.birth_place %></span>.
      <% else -%>
        <span class="desc_text"><%= t 'home.sidebar.unknown' %></span>.
      <% end -%>

      <span class="fixed_text"><%=t 'home.sidebar.emigrate_in' %></span>

      <% unless emigrant.destination_place.blank? -%>
        <span class="desc_text"><%= h emigrant.destination_place %></span>
      <% else -%>
        <span class="desc_text"><%= t 'home.sidebar.unknown' %></span>
      <% end -%>

      <span class="fixed_text"><%=t 'home.sidebar.since_year'  %></span>
      <% if emigrant.departure_year -%>
        <span class="desc_text"><%= h emigrant.departure_year %></span>.</p>
      <% else -%>
        <span class="desc_text"><%= t 'home.sidebar.unknown' %></span>.</p>
      <% end -%>
    </li>
  <% end -%>
</ul>
