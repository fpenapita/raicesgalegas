<div id="login">
	<div id="inner_content_title">
		<h1><%=t('login.title')%></h1>
	</div>
	<div class="clear"></div>
    <% form_for @user_session do |form| -%>
        <%= form.error_messages %>
        <div class="text_field">
            <%= form.label :login, t('login.username') %>
            <%= form.text_field :login %>
        </div>
        <div class="text_field">
            <%= form.label :password, t('login.password') %>
            <%= form.password_field :password %>
        </div>
        <div>
          <span><%= t('login.signup') -%> <%= link_to t('login.here'), signup_path -%> <%= t('login.if_you_dont') -%></span>
        </div>
        <div class="buttons">
            <%= form.submit t('login.submit') %>
        </div>
    <% end %>
</div>