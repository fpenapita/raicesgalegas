<% content_for(:head_contrib) do -%>
  <% #Needed for file fields %>
  <%= javascript_include_tag 'jquery.filestyle.mini' %>
  <%= javascript_include_tag 'custom.filestyle' %>

  <%= javascript_include_tag :defaults %>
  <%= include_tiny_mce_if_needed %>
<% end -%>

<% form_for @emigrant, :html => { :multipart => true } do |form| -%>
  <%= form.error_messages %>

  <div class="text_field">
      <%= form.label :name, t('emigrant.name') %>
      <%= form.text_field :name %>
  </div>
  <div class="text_field">
      <%= form.label :birth_place, t('emigrant.birth_place') %>
      <%= form.text_field :birth_place %>
  </div>
  <div class="text_field">
      <%= form.label :birth_year, t('emigrant.birth_year') %>
      <%= form.text_field :birth_year %>
  </div>
  <div class="text_field">
      <%= form.label :destination_place, t('emigrant.destination_place') %>
      <%= form.text_field :destination_place %>
  </div>
  <div class="text_field">
      <%= form.label :departure_year, t('emigrant.departure_year') %>
      <%= form.text_field :departure_year %>
  </div>
  <div class="text_field">
      <%= form.label :tag_list, t('emigrant.tag_list') %>
      <%= form.text_field :tag_list %>
  </div>
  <div class="text_field">
      <%= form.label :photo, t('emigrant.photo') %>
      <%= form.file_field :photo, :class => 'custom_file_input' %>
      <br />
      <%= image_tag @emigrant.photo.url(:thumb), :class => 'emigrant_photo' %>
  </div>
  <div class="clear"></div>
  <div class="text_area">
	  <div class="text_area_title">
		  <%= form.label :details, t('emigrant.details') %>:
		  <span id="galician_recomendation"><%= t('emigrant.galician_recomendation')%></span>
	  </div>
      <%= form.text_area :details, :class => "mceEditor" %>
  </div>

  <div class="buttons">
      <%= form.submit t('emigrant.save') %>
  </div>
<% end %>