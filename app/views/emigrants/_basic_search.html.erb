<div id="basic_search">
  <% form_for :search, :url => find_tagged_path do |form| -%>
      <div class="text_field">
          <%= form.label :tag, t('emigrant.tag_list') %>
          <%= form.text_field :tag %>
      </div>
      <div class="clear"></div>
      <div>
	      <%= link_to t('emigrant.show_advanced_search'), "#", :onclick => "$('#basic_search').slideUp(); $('#advanced_search').slideDown();" %>
	    </div>
      <div class="buttons">
          <%= form.submit t('emigrant.search'), :id => 'basic_search_submit' %>
      </div>
	  <div class="clear"></div>
  <% end %>
</div>