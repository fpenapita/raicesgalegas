<% div_for emigrant do %>
  <h2><%= link_to_unless_current h(emigrant.name), emigrant %></h2>
  <span class="image"><%= image_tag emigrant.photo.url(:thumb), :class => 'emigrant_photo' %></span>
  <p><span class="fixed_text"><%= t('emigrant.birth_place') -%>:</span><span class="desc_text"><%=h emigrant.birth_place %></span></p>
  <p><span class="fixed_text"><%= t('emigrant.birth_year') -%>:</span><span class="desc_text"><%=h emigrant.birth_year %></span></p>
  <p><span class="fixed_text"><%= t('emigrant.destination_place') -%>:</span><span class="desc_text"><%=h emigrant.destination_place %></span></p>
  <p><span class="fixed_text"><%= t('emigrant.departure_year') -%>:</span><span class="desc_text"><%=h emigrant.departure_year %></span></p>
  <div class="clear"></div>
<% end %>
