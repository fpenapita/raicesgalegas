<% if !comment.private || comment.emigrant.user == current_user %>
  <% div_for comment do -%>
    <div>
      <% if comment.private -%>
        <strong><%= t 'comment.private_comment' -%></strong>
      <% end -%>

      <strong><%= t 'comment.ago', :posted_ago => time_ago_in_words(comment.created_at) -%></strong><br />
      <% if comment.emigrant.user == current_user -%>
        <span class="commented_text">
          <%= t 'comment.commented_by',
              :name => comment.name.blank? ? t('comment.anonymous') : h(comment.name),
              :email => h(comment.email) -%>
        </span>
      <% end -%>
      <div class="comment_text">
        <div class="align_left">
          <img src="/images/comments.png" alt="comment"/>
        </div>
        <div class="align_left">
          <%= comment.body %>
        </div>
      </div>
    </div>
    <div class="clear"></div>
  <% end %>
<% end %>
